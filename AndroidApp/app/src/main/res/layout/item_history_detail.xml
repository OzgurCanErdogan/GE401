<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:backgroundTint="@color/primaryLightColor">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_history_detail_item"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/mor_logo"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_history_detail_item_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Ürün Adı:"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintLeft_toRightOf="@id/img_history_detail_item"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_history_detail_item_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="V-yaka tshirt"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_history_detail_item_name_label"
            app:layout_constraintLeft_toRightOf="@id/tv_history_detail_item_name_label" />

        <TextView
            android:id="@+id/tv_history_detail_item_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="ID:"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintLeft_toLeftOf="@id/tv_history_detail_item_name_label"
            app:layout_constraintTop_toBottomOf="@id/tv_history_detail_item_name_label" />

        <TextView
            android:id="@+id/tv_history_detail_item_id_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="#123123"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_history_detail_item_id_label"
            app:layout_constraintLeft_toRightOf="@id/tv_history_detail_item_id_label" />

        <TextView
            android:id="@+id/tv_history_detail_item_cost_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ürün fiyatı:"
            android:layout_marginTop="4dp"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintTop_toBottomOf="@id/tv_history_detail_item_id_label"
            app:layout_constraintLeft_toLeftOf="@id/tv_history_detail_item_id_label"/>

        <TextView
            android:id="@+id/tv_history_detail_item_cost_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="6"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_history_detail_item_cost_label"
            app:layout_constraintLeft_toRightOf="@id/tv_history_detail_item_cost_label" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>